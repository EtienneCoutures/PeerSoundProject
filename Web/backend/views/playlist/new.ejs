<center><h2>La page playlist</h2></center>

<center><h4> Cr√©er une nouvelle playlist</h4>
  <div>
    <form name="newPlaylist" ng-submit="savePlaylist()">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" ng-model="playlist.playlist_name" class="form-control" style="width:50%;" required>
      </div>
      <div class="form-group">
        <label for="style">Style</label>
        <input type="text" ng-model="playlist.playlist_style" style="width:50%;" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" ng-model="playlist.playlist_description" style="width:50%;" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="comment">Commentaire</label>
        <input type="text" ng-model="playlist.playlist_comment" style="width:50%;" class="form-control" required>
      </div>
      <button type="submit" style="margin-top:5%" class="btn btn-success">Submit</button>
    </form>
    <div ng-if="playlistCreated === true">
      <h3> Playlist created :)</h3>
    </div>
  </div>
