<style>
#img {
  margin-top: 10px;
  height: 50px;
  width: 50px;
}
</style>
<center><h4>La page de resultat de recherche de type {{type}}</h4></center>

<div style="margin-bottom:5%">
<div ng-if="all['user'].length">
  <div class="news" ng-repeat="x in all.user" style="margin-bottom:15px">
    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">
        <h2><b> {{ x.usr_login}} </b></h2>
      </div>
      <div class="col-md-2">
        <img src="/img/myAccount.png" alt="logo" id="img">
      </div>
    </div>
    <div class="text">
      <a ng-href='#' ng-click="redirectToUser(x.usr_login)"><h5 style="color:blue">{{ x.usr_email }}</h5></a>
    </div>
  </div>
</div>

<div ng-if="all['playlist'].length">
  <div class="news" ng-repeat="x in all.playlist" style="margin-bottom:15px">
    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">
        <h2><b>{{ x.playlist_name }}</b></h2>
      </div>
      <div class="col-md-2">
        <img src="/img/myPlaylist.png" alt="logo" id="img">
      </div>
    </div>
    <div class="text">
      <h5 style="color:blue">{{ x.playlist_description}} </h5>
    </div>
    <div class="text">
      <button type="button" style="font-size:10px; border-radius:10px; background-color:#6B92A5; color:white; width:100px;" ng-click="redirectTo('playlist', x.playlist_id)" class="btn">Voir la playlist</button>
    </div>
  </div>
</div>

<div ng-if="all['music'].length">
  <div class="news" ng-repeat="x in all.music" style="margin-bottom:15px">
    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">
        <h2><b>{{ x.music_name}}</b></h2>
      </div>
    <div class="col-md-2">
      <img src="/img/note.png" alt="logo" id="img">
    </div>
    </div>
    <div class="text">
      <h5 style="color:blue"> {{ x.music_group }}</h5>
    </div>
    <div class="text">
      <button type="button" style="font-size:10px; border-radius:10px; background-color:#6B92A5; color:white; width:100px;" ng-click="redirectTo('music', x.music_id)" class="btn">Voir la music</button>
    </div>
  </div>
</div>
</div>
