<div class="row" ng-if="$view == 'login'">
    <div class="login-header">
        <div class="brand">
            <i><img src="/img/logo2.png" style="width:35px;height:35px;"></img></i>
              <span>Login</span>
            <small>Please type your login and password</small>
        </div>
        <div class="icon">
            <i class="fa fa-sign-in"></i>
        </div>
    </div>
    <div class="login-content" style="margin-bottom:40px">
        <form>
            <div ng-if="errors.length" class="alert alert-block alert-danger">
                <ul>
                    <li ng-repeat="error in errors">{{error.message | translate}}</li>
                </ul>
            </div>
            <div class="row">
                <div class="form-group m-b-20">
                    <label for="login">Adresse Email <span class="required">*</span></label>
                    <input class="form-control input-lg"
                           name="login"
                           id="login"
                           type="text"
                           ng-model="User.login"
                           placeholder="{{ 'Username' | translate}}"
                           required="required"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group m-b-20">
                    <label for="password">Password</label>
                    <input class="form-control input-lg"
                           name="password"
                           id="password"
                           type="password"
                           ng-model="User.password"
                           on-enter="signin()"
                           placeholder="{{ 'Password' | translate}}"
                           required="required"/>
                </div>
            </div>
            <div class="row">
                <div class="checkbox m-b-20">
                    <label>
                        <input name="remember"
                               id="remember"
                               value="1"
                               ng-model="User.remember"
                               type="checkbox"/>
                        <span class="lbl">Remember me next time</span>
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-12 col-lg-offset-0" style="padding: 0">
                    <a class="btn btn-info col-md-5 btn-lg"
                      href="/signup"> Signup <i class="icon-arrow-left icon-on-left"></i>
                    </a>
                    <a class="btn btn-info col-md-5 btn-lg pull-right"
                       href="javascript:;"
                       ng-click="lostpassword()"> Lost password <i class="icon-arrow-right icon-on-right"></i>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="login-buttons">
                    <input type="button"
                           ng-click="signin()"
                           class="btn btn-success btn-block btn-lg"
                           value="{{ 'Connexion' | translate }}"/>
                </div>
            </div>
            <div class="row">
            </div>
        </form>
    </div>
</div>
<div class="row" ng-if="$view == 'lostpassword'">
    <div class="login-header">
        <div class="brand">
            <span class="logo"></span> Lost Password
            <small>Please type your email</small>
        </div>
        <div class="icon">
            <i class="fa fa-sign-in"></i>
        </div>
    </div>
    <div class="login-content">
        <form>
            <div ng-if="errors.length" class="alert alert-block alert-danger">
                <ul>
                    <li ng-repeat="error in errors">{{error.message | translate}}</li>
                </ul>
            </div>
            <div ng-if="message" class="alert alert-block alert-info">
                <ul>
                    <li>{{message | translate}}</li>
                </ul>
            </div>
            <div class="row">
                <div class="form-group m-b-20">
                    <label for="email">Email <span class="required">*</span></label>
                    <input class="form-control email"
                           name="email"
                           id="email"
                           type="text"
                           ng-model="User.email"
                           placeholder="{{ 'Email' | translate}}"
                           required="required"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-5 col-lg-offset-1">
                    <a class="btn btn-default"
                       style="width: 100%"
                       href="javascript:;"
                       ng-click="signin()">Back to Login</a>
                </div>
                <div class="form-group col-lg-6">
                    <input type="button"
                           style="width: 100%"
                           class="btn btn-primary"
                           ng-click="lostpassword()"
                           value="{{ 'Send me my password' | translate }}"/>
                </div>
            </div>
        </form>
    </div>
</div>
