<script>
    $(document).ready(function () {
        App.init();
    });

    function connect() {
        if (document.getElementById("rememberMe").checked) {
            var login = window.btoa(document.getElementById('password').value);
            login = document.getElementById('login').value + "&" + login;
            createCookie("login", login);
        } else {
            eraseCookie("login");
        }
        document.forms["login-form"].submit();
    }

    (function () {
        var login = readCookie("login");
        if (login != null) {
            login = login.split("&");
            document.getElementById('login').value = login[0];
            document.getElementById('password').value = window.atob(login[1]);
            document.getElementById("rememberMe").checked = true;
        }
        $('form').each(function () {
            $(this).find('input').keypress(function (e) {
                if (e.which == 10 || e.which == 13) {
                    connect();
                }
            });
        });
    })();
</script>
