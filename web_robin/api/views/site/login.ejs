<body>

<div id="page-loader" class="fade in"><span class="spinner"></span></div>
<!--<div class="content">-->
<div id="page-container" class="fade">
    <!-- begin login -->
    <div class="login bg-black animated fadeInDown">
        <!-- begin brand -->
        <div class="login-header">
            <div class="brand">
                <span class="logo"></span> Login
                <small>Please type your login and password</small>
            </div>
            <div class="icon">
                <i class="fa fa-sign-in"></i>
            </div>
        </div>
        <!-- end brand -->
        <div class="login-content">
            <form id="login-form" method="POST" action="/login">
                <div class="errorMessage">
                    <div class="alert alert-block alert-danger" id="login-form_es_"
                         style="<% if (!(locals.errors && errors.length > 0)) { %>display:none<% } %>">
                        <ul><%
if (locals.messages) {
        for (var i = 0; i < messages.length; i++) { %>
                            <li><b><%= messages[i].message %></b></li><%
        }
} %>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group m-b-20">
                        <label for="login">Login <span class="required">*</span></label>
                        <input class="form-control input-lg" name="login" id="login" type="text"
                               value="<%= locals.login ? login : '' %>"/>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group m-b-20">
                        <label for="password">Password</label>
                        <input class="form-control input-lg" name="password" id="password" type="password"
                               value="<%= locals.password ? password : '' %>" required="required"/>
                    </div>
                </div>
                <div class="row">
                    <div class="checkbox m-b-20">
                        <label>
                            <input name="rememberMe" id="rememberMe" value="0" type="checkbox"/>
                            <span class="lbl">Remember me next time</span>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-lg-offset-6" style="padding: 0">
                        <a class="btn btn-info btn-block btn-md" href="/lostpassword"> Lost password
                            <i class="icon-arrow-right icon-on-right"></i></a></div>
                </div>
                <div class="row">
                    <div class="login-buttons">
                        <input type="button" onclick="connect()" name="yt1" class="btn btn-success btn-block btn-lg"
                               value="Connexion"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- end login -->
</div>
